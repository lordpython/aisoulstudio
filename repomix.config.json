{
  "$schema": "https://repomix.com/schemas/latest/schema.json",
  "input": {
    "maxFileSize": 52428800
  },
  "output": {
    "filePath": "codebase-export.md",
    "style": "markdown",
    "fileSummary": true,
    "directoryStructure": true,
    "files": true,
    "removeComments": false,
    "removeEmptyLines": false,
    "compress": false,
    "topFilesLength": 5,
    "showLineNumbers": false
  },
  "include": [],
  "ignore": {
    "useGitignore": true,
    "useDotIgnore": true,
    "useDefaultPatterns": true,
    "customPatterns": [
      "docs/**",
      "plans/**",
      "last-run/**",
      "**/*.test.ts",
      "**/*.test.tsx",
      "project-export.json",
      "pnpm-lock.yaml",
      "story-pipeline-output.md",
      "codebase-export.md",
      "repomix-output.json",
      "public/production_*/**"
    ]
  },
  "security": {
    "enableSecurityCheck": true
  },
  "tokenCount": {
    "encoding": "o200k_base"
  }
}